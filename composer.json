{
	"name": "pragmaticweb/content-entity-fields",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-only",
	"homepage": "https://pragmatic.agency/",
	"authors": [
		{
			"name": "Pragmatic Web",
			"email": "hello@pragmatic.agency"
		},
		{
			"name": "Paul Gibbs",
			"email": "paul@byotos.com"
		}
	],
	"config": {
		"autoloader-suffix": "cef",
		"preferred-install": "dist",
		"process-timeout": 600,
		"sort-packages": true
	},
	"scripts": {
		"cghooks": "vendor/bin/cghooks",
		"post-install-cmd": [
			"cghooks add --ignore-lock",
			"npm install"
		],
		"post-update-cmd": "cghooks update",

		"lint:php": [
			"phplint --exclude=vendor --exclude=node_modules --exclude=src ."
		],
		"phpcs": [
			"phpcs -ps --colors --report-width=80 ."
		]
	},
	"extra": {
		"hooks": {
			"pre-commit": [
				"npx lint-staged"
			],
			"pre-push": [
				"lint:php",
				"phpcs"
			]
		}
	},
	"require": {
		"php": ">=7.3",
		"composer/installers": "^1.7"
	},
	"require-dev": {
		"brainmaestro/composer-git-hooks": "^2.8",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
		"fig-r/psr2r-sniffer": "^0.6.3",
		"overtrue/phplint": "^1.2",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpunit/phpunit": "^8.5",
		"wp-coding-standards/wpcs": "^2.2",
		"wp-phpunit/wp-phpunit": "^5.3"
	}
}
